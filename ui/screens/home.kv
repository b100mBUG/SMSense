        MDLabel:
            text: "[i]Frequent contacts[/i]"
            theme_text_color: "Custom"
            text_color: "teal"
            adaptive_height: True
            theme_font_size: "Custom"
            font_size: sp(18)
            markup: True
        MDScrollView:
            MDGridLayout:
                cols: 1
                adaptive_height: True